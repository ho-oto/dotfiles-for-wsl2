#!/usr/bin/env bash
set -euxo

/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install.sh)"
eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"

taps=(
    wez/wezterm-linuxbrew
)

formulas=(
    bat
    bottom
    broot
    dust
    emacs
    exa
    fd
    fish
    fisher
    fzf
    git-delta
    htop
    hyperfine
    jq
    juliaup
    lazygit
    ncdu
    procs
    pueue
    rclone
    ripgrep
    shellckeck
    socat
    starship
    tealdeer
    tmux
    tokei
    unzip
    wezterm
    zoxide
)

for tap in "${taps[@]}"; do
    brew tap "$tap"
done

brew update

for formula in "${formulas[@]}"; do
    if ! brew list --versions "$formula"; then
        brew install "$formula"
    fi
done
