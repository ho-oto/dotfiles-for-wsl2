#!/bin/bash
set -euxo pipefail

export DOTFILES_ROOT="$HOME/.dotfiles"

git clone https://github.com/ho-oto/dotfiles-for-wsl2 "$DOTFILES_ROOT"

export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DATA_HOME="$HOME/.local/share"

cd "$DOTFILES_ROOT/script"

installer/apt
installer/brew
# installer/cuda  disable until Windows 11
installer/julia
installer/texlive

installer/cargo
installer/pyenv
installer/fzf

./dot

installer/fisher
installer/tmux
installer/misc

cd "$DOTFILES_ROOT"
git checkout .

sudo ssh-keygen -A

cat <<EOF
You have to do the following:
1. run tmux and press prefix + I to fetch plugins
2. copy files in DOTFILES_ROOT/windows to /mnt/c/Users/{windows user name}
3. set start_wsl_sshd.bat to Task Scheduler of windows
4. (if you forget,) update WSL1 to WSL2 (start_wsl_sshd.bat works only for WSL2)
    
TODO: write bash/PowerShell script to do 2-3
EOF
